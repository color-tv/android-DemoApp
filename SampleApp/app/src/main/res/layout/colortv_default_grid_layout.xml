<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/ctv_featuredUnitLayoutContainer"
        android:layout_width="wrap_content"
        android:layout_height="472dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="36dp"
        android:background="@color/color_tv_discovery_center_white">

        <include layout="@layout/color_tv_featured_unit_layout" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ctv_featuredUnitLayoutContainer"
        android:layout_marginRight="36dp"
        android:layout_toRightOf="@+id/ctv_featuredUnitLayoutContainer"
        android:maxHeight="516dp"
        android:paddingTop="18dp">

        <FrameLayout
            android:id="@+id/ctv_recyclerViewContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:background="@color/color_tv_discovery_center_white"
            android:focusable="false"
            android:maxHeight="480dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/ctv_ivGridClose"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/relativeLayout"
        android:layout_gravity="top|right"
        android:layout_marginRight="18dp"
        android:scaleType="fitCenter"
        android:src="@drawable/color_tv_icon_close_grid_center" />

    <FrameLayout
        android:id="@+id/ctv_layoutSubscriptionFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:elevation="10dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ctv_ivFavoriteContainer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@color/color_tv_white"
        android:elevation="4dp"
        android:focusable="false"
        android:src="@drawable/color_tv_image_favorite"
        android:visibility="gone" />

</RelativeLayout>