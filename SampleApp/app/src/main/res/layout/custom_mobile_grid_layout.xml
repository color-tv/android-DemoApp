<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="bottom"
        android:gravity="bottom">

        <FrameLayout
            android:id="@+id/ctv_recyclerViewContainer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recyclerHeight"
            android:layout_gravity="bottom|left"
            android:layout_marginTop="18dp"
            android:focusable="false" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/ctv_ivFavoriteContainer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@color/color_tv_white"
        android:elevation="4dp"
        android:focusable="false"
        android:src="@drawable/color_tv_image_favorite"
        android:visibility="gone" />

</RelativeLayout>
