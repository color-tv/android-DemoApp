<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fullscreen_background"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal|bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:id="@+id/btnShowContentRecommendation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/btn_margin"
            android:background="@drawable/button_content_recommendation"
            android:text="Content Recommendation"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnShowDiscoveryCenter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/btn_margin"
            android:background="@drawable/button_discovery"
            android:text="Discovery center"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnShowAppFeature"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_interstitial"
            android:text="App Feature"
            android:layout_margin="@dimen/btn_margin"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnShowDirectEngagement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/btn_margin"
            android:background="@drawable/button_engagement"
            android:text="Direct Engagement"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnShowVideo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/btn_margin"
            android:background="@drawable/button_video"
            android:text="Video"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>